html
  height 100%
   
body
  height 100%
  margin 0px
  line-height 1em !important
  font-family: 'Roboto-mine', 'Raleway', sans-serif !important
  color #292f33
  font-weight 300
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background-image: linear-gradient(0deg, #f9fafd 0%, #f9fafd 100%);

  .material-icons
    color rgba(0, 0, 0, .5)

p
  margin 0px
  padding 0px

h1, h2, h3
  margin 0px
  padding 0px
  
.desktop
  @media screen and (max-width: 599px)  
    display none !important
.mobile
  @media screen and (min-width: 600px)  
    display none !important
    
.page
   padding 1em

input
  padding-left 1em
  display flex
  flex-grow 1
  height 30px
  border 1px solid rgba(0, 0, 0, .1)
  font-family 'Roboto', 'Raleway', sans-serif 
  letter-spacing .5px
  border-radius 2px

  &:focus
    outline none
    border 1px solid $blue

.button
  background white
  padding .5em
  border 1px solid rgba(0, 0, 0, .3)
  border-radius 4px
  cursor pointer
  display flex
  align-items center
  justify-content center
  min-width 100px
  
  &:hover
    background rgba(0, 0, 0, .05)
  &:active
    background rgba(0, 0, 0, .15)

.slide-enter-active 
  transition: all .3s ease;

.slide-leave-active 
  transition: all .3s ease;

.slide-enter, .slide-leave-to
  transform translateX(-400px)
  opacity 0

.slide-right-enter-active 
  transition: all .3s ease;

.slide-right-leave-active 
  transition: all .3s ease;

.slide-right-enter, .slide-right-leave-to
  transform translateX(300px)
  opacity 0
  
.row 
  display flex
  flex-basis 100%
  align-items center
  margin 0px
